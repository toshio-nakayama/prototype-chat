<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrototypeChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Window background color. -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.PrototypeChat">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
    </style>
</resources>